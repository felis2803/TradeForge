{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist-examples",
    "rootDir": "examples",
    "declaration": false,
    "paths": {
      "@tradeforge/core": ["packages/core/dist/index.d.ts"],
      "@tradeforge/core/*": ["packages/core/dist/*"],
      "@tradeforge/io-binance": ["packages/io-binance/dist/index.d.ts"],
      "@tradeforge/io-binance/*": ["packages/io-binance/dist/*"],
      "@tradeforge/loader-binance": ["packages/loader-binance/dist/index.d.ts"],
      "@tradeforge/loader-binance/*": ["packages/loader-binance/dist/*"],
      "@tradeforge/sim": ["packages/sim/dist/index.d.ts"],
      "@tradeforge/sim/*": ["packages/sim/dist/*"],
      "@tradeforge/validation": ["packages/validation/dist/index.d.ts"],
      "@tradeforge/validation/*": ["packages/validation/dist/*"],
      "examples/*": ["examples/*"]
    }
  },
  "include": ["examples/**/*"]
}
